/* pages/pacie/pacie.wxss */
page{
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
}
.noSj{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
}
.noform{
    margin-top: 30vh;
    font-size: 34rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: center;
color: #666666;
line-height: 48rpx;
letter-spacing: 1rpx;
margin-bottom: 30rpx;
}
.goNew{
  width: 310rpx;
height: 70rpx;
line-height: 70rpx;
opacity: 1;
background: #2b77ef;
border-radius: 35rpx;
font-size: 34rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: center;
color: #ffffff;
}

.assessment{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.assessment image{
  width: 100%;
  height: 302rpx;
}
.addNew{
  width: 702rpx;
height: 90rpx;
line-height: 90rpx;
opacity: 1;
background: #ffffff;
border-radius: 4rpx;
box-shadow: 0rpx 2rpx 14rpx 0rpx rgba(0,0,0,0.08); 
font-size: 30rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: center;
color: #2b77ef;
cursor: pointer;
margin: 20rpx auto;
}
.patientList{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.patientItem{
  width: 702rpx;
height: 164rpx;
margin-bottom: 20rpx;
opacity: 1;
background: #ffffff;
border-radius: 4rpx;
box-shadow: 0rpx 2rpx 14rpx 0rpx rgba(0,0,0,0.08); 
}
.itemDetail{
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:  0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
}
.itemDetail view{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.itemDetail view image{
  width: 41rpx;
height: 42rpx;
margin-left: 20rpx;
}
.itemDetail>text{
  font-size: 30rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: right;
color: #333333;
}
.itemDate{
  box-sizing: border-box;
  width: 100%;
 
  padding: 0 30rpx;
  height: 73rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: left;
color: #999999;
}
.itemDate>image{
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx ;
}
.fenpei{
  height: 73rpx;
  line-height: 73rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: right;
  color: #f56a00;
  
  }