<view class="funBtn">
  <view class="edit"  wx:if="{{!funBtn}}" bindtap="newOwnTopic" style="border-right:0;width:100%;height:100%">新建自己问卷</view>
  <view class="edit" wx:if="{{funBtn}}" bindtap="edit">修改</view>
  <view class="share">
  	<button open-type='share'>分享微信</button>
  </view>
</view>
