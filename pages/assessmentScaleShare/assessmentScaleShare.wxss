/* pages/assessmentScaleShare/assessmentScaleShare.wxss */
page{
  background-color: #f2f2f2;
}
.personalDetail{
  margin-top: 20rpx;
 
  background-color: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
  font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Medium;
font-weight: 500;
text-align: left;
color: #333333;
line-height: 40rpx;
}
.perItem{
  width: 50%;
  margin-top: 24rpx;
}
.perItem>text:nth-child(2),.address>text:nth-child(2){
  font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
}
.address{
  width: 100%;
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  /* align-items: center; */
}
.address>text:nth-child(1){
  width: auto;
}
.address>text:nth-child(2){
  width: calc(100% - 108rpx);
}

.form{
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  padding: 24rpx 50rpx;
  box-sizing: border-box;
}
.classifyTitle{
  font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Medium;
font-weight: 500;
text-align: left;
color: #2b77ef;
line-height: 40rpx;
margin-bottom: 24rpx;
}
.formItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  margin-bottom: 20rpx;
}
.formItem .image{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.formItem .image image{
  width: 70%;
  height: 300rpx;
  /* max-height: 300rpx; */
}
.title{
  width: 100%;
  font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Medium;
font-weight: 500;
text-align: left;
color: #333333;
line-height: 40rpx;
margin-bottom: 24rpx;
display: flex;
flex-direction: row;
justify-content: flex-start;
}
.title>text:nth-child(1){
  width: 30rpx;
}
.title>text:nth-child(2){
  width: calc(100% - 30rpx);
}
.answer{
  font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: justify;
color: #333333;
line-height: 40rpx;
width: calc(100% - 30rpx);
}
.formBox{
  width: 100%;
  background-color: #ffffff;
  padding-bottom: 120rpx;
}
.funBtn{
  font-size: 28rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #ffffff;
  align-items: center;
  border-top: 1rpx solid #f2f2f2;
}
.funBtn >view{
  width: 50%;
  /* height: 100%; */
  text-align: center;
  /* line-height: 100rpx; */
  color: #2b77ef;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.edit{
  border-right: 1rpx solid #2b77ef;
  box-sizing: border-box;
}
.treatment{
 
  width: 650rpx;
/* height: 60rpx; */
line-height: 60rpx;
opacity: 1;
/* border: 2rpx solid #2b77ef; */
border-radius: 8rpx;
display: flex;
flex-direction: row;
flex-wrap: wrap;
justify-content: space-between;
align-items: center;
/* margin: 20rpx 0; */
}
.treatment>view{
  border-radius: 8rpx;
  width: 300rpx;
  font-size: 28rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
text-align: center;
color: #2b77ef;
height: 60rpx;
border: 1rpx solid #2b77ef;
box-sizing: border-box;
margin-bottom: 24rpx;
}
.treatment>.active{
  background-color: #2b77ef;
  color: #ffffff;
}

.fixed{
  position: sticky;
  top: 0px;
  z-index: 999;
  background-color: #FFFFFF;
  width: 100%;
  /* height: 64rpx; */
}
.treatmentFix{
  border-bottom: 1rpx solid #e5e5e5;
  width: 100%;
  height: auto;
  /* padding: 20rpx 50rpx; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  /* box-sizing: border-box; */
}
.elseOther{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.elseOther >text{
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: justify;
  color: #333333;
  line-height: 42rpx;
  margin-bottom: 20rpx;
}

.share>button{
  width: 375rpx;
text-align: center;
display: inline-block;
line-height: none !important;
background: #ffffff;
color: #2b77ef;
font-size: 28rpx;
}


