/* pages/painForm/painForm.wxss */
page {
  background: #f2f2f2;
  width: 100%;
  height: 100%;
}

.labelItem {
  width: 750rpx;
  height: 160rpx;
  opacity: 1;
  background: #ffffff;
  margin-top: 20rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 34rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  letter-spacing: 1rpx;
}

.labelItem image {
  width: 16rpx;
  height: 26rpx;
}

.addLabel text {
  color: #2b77ef;
}

.popWin {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.popWinBox {
  width: 540rpx;
  height: 361rpx;
  opacity: 1;
  background: #ffffff;
  border-radius: 14rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.popWinBox .title {
  width: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.labelTitle {
  height: 121rpx;
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #000000;
  align-items: center;
}

.labelName {
  width: 456rpx;
  height: 80rpx;
  opacity: 1;
  background: #ffffff;
  border: 1rpx solid #dddddd;
  border-radius: 8rpx;
  text-align: center;
  padding: 0 15rpx;
  box-sizing: border-box;
  color: #000000;
}

.boxBtn {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: space-around; */
}
.boxBtn>view{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
font-family: PingFangSC, PingFangSC-Regular;
font-weight: 400;
color: #000000;
cursor: pointer;
}
.refuse{
  width: 50%;
  border-right: 2rpx solid #e5e5e5;
box-sizing: border-box;
}
.makesure{
  color: #2B77EF !important;
  
}