<!--pages/painForm/painForm.wxml-->
<view class="addLabel labelItem" bindtap="addChunk"><text>添加标签</text><image src="../icon/right.png"></image></view>
<view class=" labelItem" wx:for="{{list}}" bindtap="addChunkDetail" data-name='{{item.name}}' data-no='{{item.no}}'><text>{{item.name}}</text><image src="../icon/right.png"></image></view>
<!--  bindtap="addChunk" -->
<!-- <view class=" labelItem"><text>诊疗后</text><image src="../icon/right.png"></image></view> -->

<view class="popWin" wx:if="{{addShow}}">
  <view class="popWinBox">
    <view class="title">
      <view class="labelTitle">标签名称</view>
      <input type="text" class="labelName" bindinput="labelName" value="{{labelName}}" placeholder="请输入" placeholder-style="color:#999999"/>
    </view>
    <view class="boxBtn">
      <view class="refuse" bindtap="addChunk">取消</view>
      <view class="makesure" bindtap="makesure">确定</view>
    </view>
  </view>
</view>