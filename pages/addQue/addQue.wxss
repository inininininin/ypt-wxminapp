/* pages/addQue/addQue.wxss */
page {
  background-color: #f2f2f2;
}

.addQue {
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
  margin: 20rpx 0;
  padding: 0 32rpx;
  box-sizing: border-box;
}

.addQue>view {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #bbbbbb;
  line-height: 42rpx;
}

.addQue>view>text:nth-child(1) {
  font-size: 34rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #2b77ef;
  line-height: 48rpx;
  margin-bottom: 20rpx;
}

.rightIcon {
  width: 16rpx;
  height: 26rpx;
}

.singleChoice,
.multipleChoice,
.blanks {
  width: 100%;
  height: auto;
  background-color: #ffffff;
  padding: 30rpx 32rpx 40rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.blankItem{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.title {
  width: calc(100% - 90rpx);
  font-size: 34rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 48rpx;
  letter-spacing: 1rpx;
}
.edit{
  width: 90rpx;
  text-align: center;
  font-size: 34rpx;
  color: #2b77ef;
}
.answerItem {
  width: 686rpx;
  opacity: 1;
  background: #ffffff;
  border: 1rpx solid rgba(0, 0, 0, 0.25);
  border-radius: 4rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: justify;
  color: #333333;
  line-height: 42rpx;
  padding: 14rpx 30rpx 14rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.answerItem>text {
  margin-left: 15rpx;
}

.imageQue {
  width: 100%;
}

.imageQue>image {
  width: 100%;
}
.inputItem{
  width: 100%;
  height: 70rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.25);
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx !important;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.textItem {
  width: 100%;
  height: 164rpx;

  border: 1rpx solid rgba(0, 0, 0, 0.25);
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx !important;
  padding: 14rpx 30rpx !important;
  box-sizing: border-box;
}





.popWindow {
  position: fixed;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.25);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

radio .wx-radio-input {
  border-radius: 50%;
  /* 圆角 */
  transform: scale(0.7);
}

checkbox .wx-checkbox-input {
  transform: scale(0.7);
}

.elseOther{
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.elseOther >text{
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: justify;
  color: #333333;
  line-height: 42rpx;
  margin-bottom: 20rpx;
}

