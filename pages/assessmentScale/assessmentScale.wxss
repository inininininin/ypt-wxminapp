.questionList {
  margin-top: 20rpx;
  padding-bottom: 100rpx;
}

.singleChoice,
.multipleChoice,
.blanks {
  width: 100%;
  height: auto;
  background-color: #ffffff;
  padding: 30rpx 32rpx 40rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.title {
  font-size: 34rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 48rpx;
  letter-spacing: 1rpx;
}

.answerItem {
  width: 686rpx;
  opacity: 1;
  background: #ffffff;
  border: 1rpx solid rgba(0, 0, 0, 0.25);
  border-radius: 4rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: justify;
  color: #333333;
  line-height: 42rpx;
  padding: 14rpx 30rpx 14rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.answerItem>text {
  margin-left: 15rpx;
}

.imageQue {
  width: 100%;
}

.imageQue>image {
  width: 100%;
}

.inputItem {
  width: 100%;
  height: 70rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.25);
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx !important;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.textItem {
  width: 100%;
  height: 164rpx;

  border: 1rpx solid rgba(0, 0, 0, 0.25);
  font-size: 30rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  color: #333333;
  line-height: 42rpx !important;
  padding: 14rpx 30rpx !important;
  box-sizing: border-box;
}





.popWindow {
  position: fixed;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.25);
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

radio .wx-radio-input {
  border-radius: 50%;
  /* 圆角 */
  transform: scale(0.7);
}

checkbox .wx-checkbox-input {
  transform: scale(0.7);
}

.modifyPersonal {
  position: absolute;
  right: 0;
  top: 20rpx;
  background-color: #ff8400;
  width: 109rpx;
  height: 64rpx;
  border-top-left-radius: 32rpx;
  border-bottom-left-radius: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.modifyPersonal image {
  width: 40rpx;
  height: 40rpx;
  /* margin-right: 18rpx; */
}
