page {
  background-color: #f2f2f2;
}

.personalDetail {
  position: relative;
  border-top: 1rpx solid #e5e5e5;
  background-color: #ffffff;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
  padding: 0 50rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  line-height: 40rpx;
}

.perItem {
  width: 50%;
  margin-top: 24rpx;
}

.perItem>text:nth-child(2),
.address>text:nth-child(2) {
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
}

.address {
  width: 100%;
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  /* align-items: center; */
}

.address>text:nth-child(1) {
  width: auto;
}

.address>text:nth-child(2) {
  width: calc(100% - 108rpx);
}

.treatment {

  width: 650rpx;
  /* height: 60rpx; */
  line-height: 60rpx;
  opacity: 1;
  /* border: 2rpx solid #2b77ef; */
  border-radius: 8rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  /* margin: 20rpx 0; */
}

.treatment>view {
  border-radius: 8rpx;
  width: 300rpx;
  font-size: 28rpx;
  font-family: PingFangSC, PingFangSC-Regular;
  font-weight: 400;
  text-align: center;
  color: #2b77ef;
  height: 60rpx;
  border: 1rpx solid #2b77ef;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.treatment>.active {
  background-color: #2b77ef;
  color: #ffffff;
}

.fixed {
  position: sticky;
  top: 0px;
  z-index: 999;
  background-color: #FFFFFF;
  width: 100%;
  /* height: 64rpx; */
}

.treatmentFix {
  border-bottom: 1rpx solid #e5e5e5;
  width: 100%;
  height: auto;
  /* padding: 20rpx 50rpx; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  /* box-sizing: border-box; */
}

